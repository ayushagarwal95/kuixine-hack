extends layout
block head
    style.
        .container {
            margin-top: 10%;
        }
block content

    .container
        .row
            .col-xs-12.col-sm-6.col-md-8
                form(role='form', method='post', action='/search')
                    .col-xs-3.col-sm-4
                        label(for='search') Search
                    .col-xs-9.col-sm-8
                        input(type='text', class='form-control', name='searchItem')
                    .col-xs-offset-4.col-xs-4
                        input(type='submit', class='btn-lg-primary', value='Search')