extends layout

append head

    style.
        .container {
            margin-top: 10%;
        }
        .btn-lg {
            margin-top: 3%;
        }

append content
    .container
        .row
            .col-xs-12.col-sm-6.col-md-8
                form(role='form', method='post', action='/search')
                    .col-xs-3.col-sm-4
                        label(for='search', class='text-right pull-right') Search:
                    .col-xs-9.col-sm-8
                        input(id='search',type='text', class='form-control', name='searchItem', placeholder='', value='')
                    .col-xs-offset-4.col-xs-4
                        input(type='submit', class='btn-lg', value='Search')